@page
@model PrivateOfficeWebApp.EditModel
@{
    ViewData["Title"] = "Edit";
}
    <div>
        <nav class="navbar" style="background-color: #0866C6">

            <a class="navbar-brand" style="color: white">АРМ Преподавателя</a>
            <!-- <form class="form-inline">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Войти</button>
        </form> -->
        </nav>
    </div>
<div class="row">
	<div class="modal-body">
		<div class="form-university">
			<label>Университет: @Html.DisplayFor(model => model.Course.NameUniversity)</label>
		</div>
		<div class="form-nameCourse">
			<label>Название курса: @Html.DisplayFor(model => model.Course.NameCourse)</label>
		</div>
		<div class="form-group">
			<label>Группа: @Html.DisplayFor(model => model.Group.NameGroup)</label>
		</div>
		<div class="form-data">
			<label>Длительность курса: </label>
			<label>с @Html.DisplayFor(model => model.Course.StartDate)</label>
			<label>до @Html.DisplayFor(model => model.Course.EndDate)</label>
		</div>
		<div class="form-time">
			<label>Количество часов: @Html.DisplayFor(model => model.Course.StartDate)</label>
		</div>
		<a asp-page="../Classes/ViewClasses" asp-route-id="@Model.Course.IdCourse">Просмотреть все занятия</a>
	</div>
	<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="btn-outline-primary" data-toggle="modal"
						data-target="#exampleModalCenter">
					Редактировать
				</button>
			</div>
			<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
				 aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered" role="document">
					<form method="post">
						<div class="modal-body">
							<div class="form-id">
								<label hidden="hidden" for="InputIdCourse">Id курса</label>
								<input hidden="hidden" asp-for="Course.IdCourse" type="text" class="form-control" id="InputIdCourse">
							</div>
							<div class="form-university">
								<label for="InputUniveristy">Университет</label>
								<input asp-for="Course.NameUniversity" type="text" class="form-control" id="InputUniveristy">
							</div>
							<div class="form-nameCourse">
								<label for="InputGroup">Название курса</label>
								<input asp-for="Course.NameCourse" type="text" class="form-control" id="InputNameCourse">
							</div>
							<div class="form-group">
								<label for="InputGroup">Группа</label>
								<input asp-for="Course.IdGroup" hidden="hidden" />
								<input asp-for="Group.NameGroup" type="text" class="form-control" id="InputGroup">
							</div>
							<div class="form-data">
								<label for="InputCourse">Длительность курса</label>
								<input asp-for="Course.StartDate" type="date" class="form-control" id="InputStartCourse">
								<input asp-for="Course.EndDate" type="date" class="form-control" id="InputEndCourse">
							</div>
							<div class="form-time">
								<label for="InputGroup">Количество часов</label>
								<input asp-for="Course.CountTime" type="text" class="form-control" id="InputTime">
							</div>
						</div>
						<div class="modal-footer">
							<input type="submit" class="btn btn-secondary" asp-page="./IndexCourse" asp-route-id="@Model.Course.IdCourse" value="Закрыть" />
							<input type="submit" class="btn btn-primary" value="Добавить курс" />
						</div>
					</form>
				</div>
			</div>
	</div>
</div>
